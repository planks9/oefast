<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewStationMenuePersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Testperson"
        android:textSize="20sp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/buttonStationOne"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="Station 1" />

        <TextView
            android:id="@+id/textViewStationMenueStationOneDescription"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
             />


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/buttonStationTwo"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="Station 2" />

        <TextView
            android:id="@+id/textViewStationMenueStationTwoDescription"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
             />


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/buttonStationThree"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="Station 3" />

        <TextView
            android:id="@+id/textViewStationMenueStationThreeDescription"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
             />


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/buttonStationFour"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="Station 4" />

        <TextView
            android:id="@+id/textViewStationMenueStationFourDescription"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
             />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/buttonStationFive"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="Station 5" />

        <TextView
            android:id="@+id/textViewStationMenueStationFiveDescription"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
             />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/buttonPraeTest"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:text="Vortest" />

        <Button
            android:id="@+id/buttonPostTest"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:text="Nachtest" />

    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Brustgurt" />

        <TextView
            android:id="@+id/textViewStationMenueConnected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="false" />



        <Button
            android:id="@+id/buttonEndDurchlauf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="60dp"
            android:background="@android:color/holo_red_dark"
            android:text="Durchlauf beenden" />


    </TableRow>




</LinearLayout>